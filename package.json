{
  "name": "mern-mono-ts",
  "version": "1.0.0",
  "description": "A MERN Stack boilerplate using typescript and webpack where the client and server are in a single repo",
  "author": "Andrianarisoa Daniel",
  "license": "MIT",
  "keywords": [
    "react",
    "express",
    "mongodb",
    "node",
    "mern"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/radandevist/mern-mono-ts"
  },
  "main": "./dist/server/server.bundle.js",
  "scripts": {
    "dev": "yarn dev:serve:watch",
    "clean": "rimraf dist",
    "build": "yarn prod:build:client && yarn prod:build:server",
    "start": "NODE_ENV=production yarn start:server",
    "start:server": "node dist/server/server.bundle.js",
    "dev:serve:watch": "webpack --watch --config=./webpack/server/webpack.dev.js",
    "dev:build:server": "webpack --config=./webpack/server/webpack.dev.js",
    "dev:build:client": "webpack --config=./webpack/client/webpack.dev.js",
    "dev:start:server": "yarn dev:build:server && yarn start:server",
    "prod:build:server": "webpack --config=./webpack/server/webpack.prod.js",
    "prod:build:client": "webpack --config=./webpack/client/webpack.prod.js",
    "prod:start:server": "yarn build && yarn start:server"
  },
  "dependencies": {
    "@hot-loader/react-dom": "^17.0.1",
    "@material-ui/core": "^4.11.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "joi": "^17.3.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.17",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hot-loader": "^4.13.0",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.12.10",
    "@material-ui/types": "^5.1.0",
    "@rogalski/webpack-file-manager": "^1.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/helmet": "^4.0.0",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongoose": "^5.10.3",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router": "^5.1.11",
    "@types/react-router-dom": "^5.1.7",
    "@types/webpack": "^4.41.26",
    "@types/webpack-dev-middleware": "^4.0.0",
    "@types/webpack-hot-middleware": "^2.25.3",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "autoprefixer": "^10.2.1",
    "babel-loader": "^8.2.2",
    "compression-webpack-plugin": "^7.1.2",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "cssnano": "^4.1.10",
    "eslint": "^7.17.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "html-loader": "^1.3.2",
    "html-webpack-plugin": "^5.1.0",
    "mini-css-extract-plugin": "^1.3.4",
    "nodemon-webpack-plugin": "^4.4.4",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "postcss": "^8.2.4",
    "postcss-loader": "^4.1.0",
    "postcss-normalize": "^9.0.0",
    "postcss-preset-env": "^6.7.0",
    "rimraf": "^3.0.2",
    "sass": "^1.32.4",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^5.17.0",
    "webpack-bundle-analyzer": "^4.3.0",
    "webpack-cli": "^4.4.0",
    "webpack-dev-middleware": "^4.0.4",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-node-externals": "^2.5.2",
    "webpack-pwa-manifest": "^4.3.0"
  }
}
